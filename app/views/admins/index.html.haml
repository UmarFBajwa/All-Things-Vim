%h1 Items

%table
  %tr
    %th Name
  - @items.each_slice(3) do |itemary|
    .row
      -itemary.each do |item|
        .col-md-4
          %span= item.name
          %br
          %img{src: item.image_url}
          %br
          %span=link_to 'Show', item_path(item)
          %span=link_to 'Edit', edit_item_path(item)
          %span=link_to 'Delete', item_path(item), method: :delete, data: {confirm: 'Are you sure?'}

%button.btn.btn-primary= link_to 'Create an item', new_item_path
