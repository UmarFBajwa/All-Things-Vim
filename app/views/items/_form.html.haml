- if @product.errors.any?
  #error_explanation
  %h2
    = pluralize(@product.errors.count, "error")
    prohibited
    this product from being saved:
  %ul
    - @product.errors.full_messages.each do |msg|
    %li= msg

= form_for @item do |f|
  %p
    = f.label :name
    = f.text_field :name

  %p
    = f.label :price
    = f.text_field :price

  %p
    = f.label :description
    = f.text_field :description

  %p
    = f.label :image_url
    = f.text_field :image_url

  %p
    = f.submit(type = "Submit")

