%center
  %h1
    = @item.name.upcase

  %div.jumbotron
    %img{src: @item.image_url}

    %p.item_label
      = "PRICE:"

    %p
      -# = "$" + @item.price.to_s
      =number_to_currency(@item.price)

    %p.item_label
      = "QUANTITY:"

    %p
      = @item.quantity

    %p.item_label
      = "DESCRIPTION:"

    %p
      = @item.description


    %span=link_to 'Edit', edit_item_path(@item)
    -# %p
    %span=link_to 'Home', root_path
    %span=link_to 'Delete', item_path(@item), method: :delete, data: {confirm: 'Are you sure?'}
