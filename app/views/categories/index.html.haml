%h1 All Categories

%table
  %tr
    %th Name
    - if current_user && current_user.admin
      %th Edit
      %th Delete
  - @categories.each do |category|
    %tr
      %td= link_to category.name, category_path(category)
      - if current_user && current_user.admin
        %td= link_to 'Edit', edit_category_path(category)
        %td= link_to 'Delete', category_path(category), method: :delete, data: { confirm: "Are you sure?" }
